{
  "name": "tsx-tanks",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc main.ts && webpack --mode production && electron-builder",
    "watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7",
    "typescript": "^4.9.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "build": {
    "appId": "com.yourdomain.tsx-tanks",
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
